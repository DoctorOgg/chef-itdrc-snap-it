APP_LOCALE=<%=node["itdrc"]["snap-it"]["app_config"]["locale"]%>

# --------------------------------------------
# REQUIRED: DATABASE SETTINGS
# --------------------------------------------
DB_CONNECTION=<%=node["itdrc"]["snap-it"]["app_config"]["db"]["driver"]%>
