DB_PREFIX=<%=node["itdrc"]["snap-it"]["app_config"]["db"]["prefix"]%>
DB_DUMP_PATH='/usr/bin'

# --------------------------------------------
# OPTIONAL: SSL DATABASE SETTINGS
# --------------------------------------------
DB_SSL=<%=node["itdrc"]["snap-it"]["app_config"]["db"]["ssl"]["enable"]%>
